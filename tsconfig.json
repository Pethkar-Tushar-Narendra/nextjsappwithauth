{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/register/Register.jsx",
    "pages/favourites/index.jsx",
    "pages/favourites/Favourites.jsx",
    "pages/movieTrailer/[id]/index.jsx",
    "Components/YoutubePlayer.jsx",
    "pages/movie/[id]/index.jsx",
    "Components/Details.jsx",
    "Components/ShowDetails.jsx",
    "Components/ReviewCard.jsx",
    "Components/AddReview.jsx",
    "middleware.js",
    "Components/Star.jsx"
  ],
  "exclude": ["node_modules"]
}
